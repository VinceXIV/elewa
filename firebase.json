{
  "functions": {
    "source": "dist/apps/conv-lm-backend",
    "predeploy": [
      "nx build conv-lm-backend --skip-nx-cache --prod",
      "node tools/scripts/build-gc-functions-package.js"
    ]
  },
  "hosting": {
    "target": "convl-manager",
    "public": "dist/apps/conv-learning-manager",
    "predeploy": [
      "nx build conv-learning-manager --skip-nx-cache --prod"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "singleProjectMode": true
  }
}
